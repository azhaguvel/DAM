<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aninterface.root.dam.Home_Activity"
    tools:showIn="@layout/app_bar_home_">


    <Button
        android:background="@drawable/today_reposrt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/new_customer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:id="@+id/today_report" />

    <Button
        android:background="@drawable/repay"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/overall_report"
        android:layout_alignRight="@+id/today_report"
        android:layout_alignEnd="@+id/today_report"
        android:id="@+id/reapayment" />

    <Button
        android:background="@drawable/profit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/profit"
        android:layout_alignTop="@+id/customer_list"
        android:layout_alignLeft="@+id/reapayment"
        android:layout_alignStart="@+id/reapayment"
        android:layout_marginTop="0dp" />

    <Button
        android:background="@drawable/new_customer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/new_customer"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_customer"
        android:layout_alignLeft="@+id/new_customer"
        android:layout_alignStart="@+id/new_customer"
        android:id="@+id/textView4"
        android:text="New Customer" />

    <TextView
        android:text="Over all Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_report"
        android:layout_alignLeft="@+id/overall_report"
        android:layout_alignStart="@+id/overall_report"
        android:id="@+id/textView7" />

    <TextView
        android:text="Repayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reapayment"
        android:layout_alignLeft="@+id/reapayment"
        android:layout_alignStart="@+id/reapayment"
        android:id="@+id/textView8" />

    <TextView
        android:text="Customer List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_below="@+id/customer_list"
        android:layout_alignRight="@+id/customer_list"
        android:layout_alignEnd="@+id/customer_list" />

    <TextView
        android:text="Profit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_below="@+id/profit"
        android:layout_alignLeft="@+id/profit"
        android:layout_alignStart="@+id/profit"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:text="Chitfund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <Button
        android:background="@drawable/chitfund"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/chit_fund"
        android:layout_above="@+id/textView11"
        android:layout_centerHorizontal="true" />

    <Button
        android:background="@drawable/today_reposrt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:id="@+id/overall_report"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <Button
        android:background="@drawable/new_customer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/customer_list"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

</RelativeLayout>
