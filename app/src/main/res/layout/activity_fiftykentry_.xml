<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new__customer_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aninterface.root.dam.com.azhaguvel.dam.chitfund.Fiftykentry_Activity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="28dp"
        android:id="@+id/new_username"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="32dp"
        android:id="@+id/new_mobile"
        android:layout_below="@+id/new_username"
        android:layout_alignLeft="@+id/new_username"
        android:layout_alignStart="@+id/new_username"
        android:hint="MobileNo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/new_depositamt"
        android:layout_below="@+id/new_mobile"
        android:layout_alignLeft="@+id/new_mobile"
        android:layout_alignStart="@+id/new_mobile"
        android:layout_marginTop="25dp"
        android:hint="DepositAmount" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="24dp"
        android:id="@+id/new_dueamt"
        android:layout_below="@+id/new_depositamt"
        android:layout_alignLeft="@+id/new_depositamt"
        android:layout_alignStart="@+id/new_depositamt"
        android:hint="DueAmount" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/new_dueamt"
        android:layout_alignRight="@+id/new_dueamt"
        android:layout_alignEnd="@+id/new_dueamt"
        android:layout_marginTop="28dp"
        android:id="@+id/new_address"
        android:hint="Address" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_address"
        android:layout_marginTop="22dp"
        android:id="@+id/spinner_value"
        android:drawSelectorOnTop="true"
        android:entries="@array/chiffund_name"
        android:layout_alignLeft="@+id/new_address"
        android:layout_alignStart="@+id/new_address"
        android:layout_alignRight="@+id/new_address"
        android:layout_alignEnd="@+id/new_address" />
</RelativeLayout>
