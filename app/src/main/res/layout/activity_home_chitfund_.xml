<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_chitfund_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.azhaguvel.dam.chitfund.HomeChitfund_Activity">

    <Button
       android:background="@drawable/today_reposrt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/fifty_insert"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:id="@+id/fivek" />

    <Button
        android:background="@drawable/today_reposrt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/fifty_insert"
        android:layout_alignRight="@+id/fifty_insert"
        android:layout_alignEnd="@+id/fifty_insert"
        android:layout_marginTop="59dp"
        android:id="@+id/hunk" />

    <Button
        android:background="@drawable/today_reposrt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/hunk"
        android:layout_alignRight="@+id/fivek"
        android:layout_alignEnd="@+id/fivek"
        android:id="@+id/twohunk" />

    <Button
        android:text="Button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="33dp"
        android:id="@+id/fifty_insert"
        android:background="@drawable/new_customer"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Customer Entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fifty_insert"
        android:layout_alignLeft="@+id/fifty_insert"
        android:layout_alignStart="@+id/fifty_insert"
        android:layout_marginTop="15dp"
        android:id="@+id/textView3" />

    <TextView
        android:text="50k List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/fivek"
        android:layout_alignStart="@+id/fivek"
        android:id="@+id/textView12" />

    <TextView
        android:text="100k List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hunk"
        android:layout_alignLeft="@+id/hunk"
        android:layout_alignStart="@+id/hunk"
        android:layout_marginTop="16dp"
        android:id="@+id/textView13" />

    <TextView
        android:text="200k List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twohunk"
        android:layout_alignLeft="@+id/twohunk"
        android:layout_alignStart="@+id/twohunk"
        android:id="@+id/textView14" />

</RelativeLayout>
